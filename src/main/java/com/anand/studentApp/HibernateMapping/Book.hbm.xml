<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

<class name="com.anand.studentApp.models.Book" table="Books">

		<id name="bookId" type="string">
			<column name="bookId" length="20" />
		</id>
		
		<property name="bookName" type="string">
			<column name="bookName" length="20" not-null="true" />
		</property>
		
		<property name="isAvailable" type="char">
			<column name="isAvailable" length="1" not-null="true" />
		</property>
		
		<one-to-one name="issue" class="com.anand.studentApp.models.BookIssue"
			cascade="save-update"></one-to-one>
</class>
</hibernate-mapping>